

<%- include("header")-%>
  <div class="box" id="heading">
    <h1><%=listTitle%></h1>
  </div>
  <div class="box">
    <% for(var i=0;i<newitems.length;i++){%>
      <form class="" action="/delete" method="post">
        <div class="item">
          <input type="checkbox" name="checkbox" value="<%=newitems[i]._id%>" onChange="this.form.submit()">
          <p><%=newitems[i].name%></p>
        </div>
        <input type="hidden" name="listName" value="<%=listTitle %>"></input>
      </form>
    <%}%>

    <form class="item" action="/" method="post">
      <input type="text" name="newItem" placeholder="Enter Item" required autocomplete="off">
      <button type="submit" name="button" value=<%=listTitle %> >+</button>
    </form>
    </div>

    <%- include("footer")-%>
